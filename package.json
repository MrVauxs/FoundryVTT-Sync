{
	"name": "foundryvtt-sync",
	"type": "module",
	"version": "2.0.0",
	"description": "A cross-bundler plugin to sync FoundryVTT compendiums with your file system. Supports Vite, Rollup, Webpack, and esbuild.",
	"author": "Vauxs",
	"license": "MIT",
	"homepage": "https://github.com/MrVauxs/FoundryVTT-Sync#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MrVauxs/FoundryVTT-Sync.git"
	},
	"bugs": {
		"url": "https://github.com/MrVauxs/FoundryVTT-Sync/issues"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"import": "./dist/vite.js"
		},
		"./rollup": {
			"types": "./dist/rollup.d.ts",
			"import": "./dist/rollup.js"
		},
		"./webpack": {
			"types": "./dist/webpack.d.ts",
			"import": "./dist/webpack.js"
		},
		"./esbuild": {
			"types": "./dist/esbuild.d.ts",
			"import": "./dist/esbuild.js"
		}
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"prepublishOnly": "tsc -p .",
		"build": "tsc -p .",
		"lint": "eslint . --cache",
		"lint:fix": "eslint . --fix --cache"
	},
	"peerDependencies": {
		"esbuild": ">=0.17",
		"rollup": ">=3",
		"vite": ">=4",
		"webpack": ">=5"
	},
	"peerDependenciesMeta": {
		"esbuild": {
			"optional": true
		},
		"rollup": {
			"optional": true
		},
		"vite": {
			"optional": true
		},
		"webpack": {
			"optional": true
		}
	},
	"dependencies": {
		"@foundryvtt/foundryvtt-cli": "^3.0.3",
		"chalk": "^5.6.2",
		"unplugin": "^3.0.0"
	},
	"devDependencies": {
		"@7h3laughingman/foundry-types": "^13.351.10",
		"@antfu/eslint-config": "^4.19.0",
		"eslint": "^9.39.2",
		"eslint-plugin-antfu": "^3.2.0",
		"eslint-plugin-format": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^5.4.21"
	}
}
