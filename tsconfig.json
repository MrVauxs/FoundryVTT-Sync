{
	"compilerOptions": {
		"target": "ES2022",
		"lib": [
			"es2022",
			"dom"
		],
		"baseUrl": ".",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"types": [
			"vite/client",
			"foundry-pf2e",
			"foundry-pf2e/lib-wrapper"
		],
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"declaration": true,
		"outDir": "dist",
		// Best practices
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true
	},
	"include": [
		"src/"
	],
	"exclude": [
		"node_modules/*"
	]
}
